{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
		"resourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "Resource group name"
            }
        },
        "applicationInsightsName": {
            "type": "string",
            "metadata": {
                "description": "Application Insights name"
            }
        },
        "sqlServerName": {
            "type": "string",
            "metadata": {
                "description": "SQL Server name"
            }
        },
        "sqlServerAdminLogin": {
            "type": "string",
            "defaultValue": "sqlSimoonaApp",
            "metadata": {
                "description": "SQL Server administrator login"
            }
        },
        "sqlServerAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "SQL Server administrator password"
            }
        },
        "sqlDbName": {
            "type": "string",
            "metadata": {
                "description": "SQL Server DB name"
            }
        },
        "sqlDbMaxSizeBytes": {
            "type": "string",
            "defaultValue": "2147483648",
            "metadata": {
                "description": "SQL Server DB max size in bytes"
            }
        },
        "sqlDbSkuName": {
            "type": "string",
            "allowedValues": [
                "Basic",
                "S0",
                "S1",
                "S2",
                "P1",
                "P2"
            ],
            "defaultValue": "Basic"
        },
        "sqlDbSkuTier": {
            "type": "string",
            "allowedValues": [
                "Basic",
                "Standard",
                "Premium"
            ],
            "defaultValue": "Basic"
        },
        "sqlFirewallRuleName_VismaVPN": {
            "type": "string",
            "defaultValue": "Visma VPN"
        },
        "sqlFirewallRuleIpAddress_VismaVPN": {
            "type": "string",
            "defaultValue": "193.75.91.13"
        },
        "sqlFirewallRuleName_VismaOffice": {
            "type": "string",
            "defaultValue": "Visma Office"
        },
        "sqlFirewallRuleIpAddress_VismaOffice": {
            "type": "string",
            "defaultValue": "88.119.143.44"
        },
        "omsWorkspaceName": {
            "type": "string",
            "defaultValue": "simoona",
            "metadata": {
                "description": "OMS WorkspaceName"
            }
        },
        "omsWorkspaceServiceTier": {
            "type": "string",
            "defaultValue": "Free",
            "allowedValues": [
                "Free",
                "Standalone",
                "PerNode"
            ],
            "metadata": {
                "description": "Service Tier: Free, Standalone, or PerNode"
            }
        },
        "omsWorkspaceDataRetention": {
            "type": "string",
            "defaultValue": "7",
            "metadata": {
                "description": "Number of days of retention. Free plans can only have 7 days, Standalone and OMS plans include 30 days for free"
            }
        },
        "storageAccountName": {
            "type": "string",
            "defaultValue": "simoonaapp"
        },
        "storageSkuName": {
            "defaultValue": "Standard_RAGRS",
            "type": "string",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Standard_ZRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Storage SKU (Account type)"
            }
        }
    },
    "variables": {},
    "resources": [{
            "apiVersion": "2014-04-01",
            "type": "Microsoft.Insights/components",
            "kind": "other",
            "name": "[parameters('applicationInsightsName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "resourceType": "Application Insights",
                "clusterName": "[parameters('resourceGroupName')]"
            },
            "properties": {
                "ApplicationId": "[parameters('resourceGroupName')]"
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Sql/servers",
            "kind": "v12.0",
            "name": "[parameters('sqlServerName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "administratorLogin": "[parameters('sqlServerAdminLogin')]",
                "administratorLoginPassword": "[parameters('sqlServerAdminPassword')]",
                "version": "12.0"
            },
            "dependsOn": [],
            "resources": [
                {
                    "apiVersion": "2017-10-01-preview",
                    "type": "databases",
                    "name": "[parameters('sqlDbName')]",
                    "location": "[resourceGroup().location]",
                    "sku": {
                        "name": "[parameters('sqlDbSkuName')]",
                        "tier": "[parameters('sqlDbSkuTier')]"
                    },
                    "properties": {
                        "maxSizeBytes": "[parameters('sqlDbMaxSizeBytes')]"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
                    ]
                },
                {
                    "apiVersion": "2015-05-01-preview",
                    "type": "firewallRules",
                    "kind": "v12.0",
                    "name": "AllowAllWindowsAzureIps",
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "startIpAddress": "0.0.0.0",
                        "endIpAddress": "0.0.0.0"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
                    ]
                },
                {
                    "apiVersion": "2015-05-01-preview",
                    "type": "firewallRules",
                    "kind": "v12.0",
                    "name": "[parameters('sqlFirewallRuleName_VismaVPN')]",
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "startIpAddress": "[parameters('sqlFirewallRuleIpAddress_VismaVPN')]",
                        "endIpAddress": "[parameters('sqlFirewallRuleIpAddress_VismaVPN')]"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
                    ]
                },
                {
                    "apiVersion": "2015-05-01-preview",
                    "type": "firewallRules",
                    "kind": "v12.0",
                    "name": "[parameters('sqlFirewallRuleName_VismaOffice')]",
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "startIpAddress": "[parameters('sqlFirewallRuleIpAddress_VismaOffice')]",
                        "endIpAddress": "[parameters('sqlFirewallRuleIpAddress_VismaOffice')]"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', parameters('sqlServerName'))]"
                    ]
                }
            ]
        },
        {
            "apiVersion": "2017-03-15-preview",
            "type": "Microsoft.OperationalInsights/workspaces",
            "name": "[parameters('omsWorkspaceName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "Name": "[parameters('omsWorkspaceServiceTier')]"
                },
                "retention": "[parameters('omsWorkspaceDataRetention')]"
            },
            "resources": []
        },
        {
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('storageAccountName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('storageSkuName')]"
            },
            "kind": "Storage"        
        }
    ],
    "outputs": {
		"appInsightsInstrumentationKey": {
			"type": "string",
			"value": "[reference(resourceId('Microsoft.Insights/components', parameters('applicationInsightsName')), '2014-04-01').InstrumentationKey]"
        },
        "omsWorkspaceId": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', parameters('omsWorkspaceName')), '2015-11-01-preview').customerId]"
        },
        "omsSharedKey": {
            "type": "string",
            "value": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces/', parameters('omsWorkspaceName')), '2015-11-01-preview').primarySharedKey]"
        },
        "storageSharedAccountKey": {
            "type": "string",
            "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value]"
        },
        "storageSharedAccountConnectionString": {
            "type": "string",
            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',parameters('storageAccountName'),';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).keys[0].value)]"
        }
    }
}